				  $DenumireStocProducator=$products->DenumireStocProducator;
				  $Stoc=$products->Stoc;
				  $PretLista=$products->PretLista;
				  $Pret=$products->Pret;
				  $PretCuAdaosCuTva=$products->PretCuAdaosCuTva;
				  $Transport=$products->Transport;
				  $Imagine=$products->Imagine;
				  $Marca=$products->Marca;
				  $Model=$products->Model;
				  $Latime=$products-Latime;
				  $Diametru=$products->$Diametru;
				  $PCD=$products->PCD;
				  $PCD1=$products->PCD1;
				  $ET=$products->ET;
				  $CB=$products->CB;
				  
				  $posts = get_posts(array(
						'numberposts'	=> -1,
						'post_type'		=> 'post',
						'meta_key'		=> 'source-alcar-id',
						'meta_value'	=> $CodProdus
					));
					
				  if($posts)
				  {
					  foreach ( $posts as $post ) {
						   $post_id = $post->ID;
						}
				  }
				  if($post_id)
				  {
					   $post = array(
						  'ID'             => $post_id // The full text of the post.
						  'post_content'   => $DenumireProdusClar // The full text of the post.
						  'post_title'     => $DenumireProdus
						  'post_status'    => 'pending'
						  'post_type'      => 'post'
						  'ping_status'    => 'default_ping_status' // Pingbacks or trackbacks allowed. Default is the option 'default_ping_status'.
						  'post_parent'    => 0
						  'post_excerpt'   => $DenumireProdusClar
						  'post_date'      => date("Y-m-d H:i:s")
						  'post_date_gmt'  => date("Y-m-d H:i:s")
						  'comment_status' => 'default_comment_status'
						);
						$last_post_id=$post_id;
				  }
				  else
				  {
					  $post = array(
						  'post_content'   => $DenumireProdusClar // The full text of the post.
						  'post_title'     => $DenumireProdus
						  'post_status'    => 'pending'
						  'post_type'      => 'post'
						  'ping_status'    => 'default_ping_status' // Pingbacks or trackbacks allowed. Default is the option 'default_ping_status'.
						  'post_parent'    => 0
						  'post_excerpt'   => $DenumireProdus
						  'post_date'      => date("Y-m-d H:i:s")
						  'post_date_gmt'  => date("Y-m-d H:i:s")
