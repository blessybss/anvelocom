          $articles = get_posts_from_category($SPECIAL_CATEGORIES[$index], -1);
          $filters = $FILTERS[$index];
          
          global $wpdb;
          $table = $wpdb->prefix . 'filter_' . $TABLES[$index];
          
          // First remove all existing data ....
          $ret = $wpdb->query( 
          	$wpdb->prepare( 
          		"TRUNCATE TABLE $table", array()
          	)
          );
          echo ($ret != false) ? "OK " : "Error ";
		  
		  $import_type=trim($_POST['anvelocom-import-from']);
		  if($import_type=='Nexxon')
		  {
			  $complete_xml_string=file_get_contents('http://www.nexxon.ro/anvelope.xml/ibs36cjD/offroad');
			  $xml = simplexml_load_string($complete_xml_string);
			  foreach($xml->produse as $products)
			  {
				  $code=$products->code;
				  $categorie=$products->categorie;
				  $brand=$products->brand;
				  $profil=$products->profil;
				  $latime=$products->latime;
				  $inaltime=$products->inaltime;
				  $radius=$products->radius;
				  $load_index=$products->load_index;
				  $speed_index=$products->speed_index;
				  $specification=$products->specification;
				  $tube=$products->tube;
				  $fold=$products->$fold;
				  $descriere=$products->descriere;
				  $sezon=$products->sezon;
				  $image_url=$products->image_url->img['src'];
				  $rulare=$products->rulare;
				  $franare=$products->franare;
				  $fundal=$products->fundal;
				  $zgomot=$products->zgomot;
				  $stoc=$products->stoc;
				  $pret=$products->pret;
				  
				  $posts = get_posts(array(
						'numberposts'	=> -1,
						'post_type'		=> 'post',
						'meta_key'		=> 'source-nexxon-id',
						'meta_value'	=> $code
					));
					
				  if($posts)
				  {
					  foreach ( $posts as $post ) {
						   $post_id = $post->ID;
						}
				  }
				  if($post_id)
				  {
					   $post = array(
						  'ID'             => $post_id // The full text of the post.
						  'post_content'   => $descriere // The full text of the post.
						  'post_title'     => $categorie
						  'post_status'    => 'pending'
						  'post_type'      => 'post'
						  'ping_status'    => 'default_ping_status' // Pingbacks or trackbacks allowed. Default is the option 'default_ping_status'.
						  'post_parent'    => 0
						  'post_excerpt'   => $descriere
						  'post_date'      => date("Y-m-d H:i:s")
