						$filename=$upload_dir['basedir'].'/'.date("YmdHis").'.png';
						copy($image_url, $filename);
						$wp_filetype = wp_check_filetype(basename($filename), null );
						$attachment = array(
							'post_mime_type' => $wp_filetype['type'],
							'post_title' => preg_replace('/\.[^.]+$/', '', basename($filename)),
							'post_content' => '',
							'post_status' => 'inherit'
						);
						$attach_id = wp_insert_attachment( $attachment, $filename, $last_post_id );

						$thumb_attach_attr = wp_get_attachment_image_src( $attach_id );

						$postmeta_id = add_post_meta($last_post_id, 'thumbnail', $thumb_attach_attr[0]);

						$eshop_product['sku']=htmlspecialchars($last_post_id);
						$eshop_product['description']=htmlspecialchars($descriere);
						$eshop_product['sale']='yes';
						$eshop_product['featured']='Yes';
						$final_stock=(($stoc-$_POST['anvelocom-import-stock-reduce'])>0)?($stoc-$_POST['anvelocom-import-stock-reduce']):0;
						$eshop_product['products'][1]['stkqty']=$final_stock;
						$stocktable=$wpdb->prefix ."eshop_stock";
						$sql = "select post_id from $stocktable WHERE post_id=$last_post_id AND option_id=1";
						$result=$wpdb->get_results($sql);
						if( !empty( $result ) ){
							$sql = "UPDATE $stocktable set available=$stkv where post_id=%d AND option_id=1";
							$wpdb->query($wpdb->prepare($sql,$last_post_id));
						} else {
							$sql = "INSERT INTO $stocktable (post_id,option_id,available,purchases) VALUES (%d,1,%d,0)";
							$wpdb->query($wpdb->prepare($sql,$last_post_id,$stkv));
						}
						$eshop_product['products'][1]['price'] = $pret+(($pret*$_POST['anvelocom-import-price-percentage'])/100);
						$eshop_product['products'][1]['saleprice'] = 'N/A';
						$eshop_product['products'][1]['weight']='N/A';
						
						update_post_meta( $last_post_id, '_eshop_featured', 'Yes');
						update_post_meta( $last_post_id, '_eshop_sale', 'yes');
						update_post_meta( $last_post_id, '_eshop_stock', 1);
						update_post_meta( $last_post_id, '_eshop_product', $eshop_product);
						
						update_post_meta( $last_post_id, 'anvelope-brand', $brand);
						update_post_meta( $last_post_id, 'anvelope-diametru', $diametru);
						update_post_meta( $last_post_id, 'anvelope-inaltime', $inaltime);
						update_post_meta( $last_post_id, 'anvelope-latime', $latime);
						update_post_meta( $last_post_id, 'anvelope-profil', $profil);
						update_post_meta( $last_post_id, 'source-nexxon-id', $code);
