function anvelocom_import_page() { ?>
  <section id="import" class="import">
    <h1>Import</h2>
    
    <form action="?page=anvelocom-import" method="post">
	  <input type="hidden" value="<?php echo wp_create_nonce('anvelocom-import') ?>" id="nonce" name="nonce">
      <input type="hidden" id="action" name="action" value="def-criteria">
      <table>
		<tr class="anvelocom-import-row">
			<td><Strong>Import From</strong></td>
			<td>
				<input type="radio" id="anvelocom-import-from-nexxon" name="anvelocom-import-from" value="Nexxon"><label for="anvelocom-import-from-nexxon">Nexxon</label>
				&nbsp;&nbsp;&nbsp;&nbsp;
				<input type="radio" id="anvelocom-import-from-alcar" name="anvelocom-import-from" value="Alcar"><label for="anvelocom-import-from-alcar">Alcar</label>
			</td>
		</tr>
		<tr class="anvelocom-import-row">
			<td colspan="2">&nbsp;&nbsp;</td>
		</tr>
		<tr class="anvelocom-import-row">
			<td><Strong>Price Raise Percentage</strong></td>
			<td>
				<input type="text" id="anvelocom-import-price-percentage" name="anvelocom-import-price-percentage" value="">
			</td>
		</tr>
		<tr class="anvelocom-import-row">
			<td colspan="2">&nbsp;&nbsp;</td>
		</tr>
		<tr class="anvelocom-import-row">
			<td><Strong>Stock Reduce Amount</strong></td>
			<td>
				<input type="text" id="anvelocom-import-stock-reduce" name="anvelocom-import-stock-reduce" value="">
			</td>
		</tr>
		<tr class="anvelocom-import-row">
			<td colspan="2">&nbsp;&nbsp;</td>
		</tr>
		<tr class="anvelocom-import-row">
			<td colspan="2"><input type="submit" value="Tuning" id="submit" name="submit"></td>
		</tr>
	  </table>
    </form>
    
    <?php 
      // Generate the relationships
      //
      if (($_POST) && ($_POST['action'] == 'def-criteria')) {
        if (wp_verify_nonce( $_POST['nonce'], 'anvelocom-import' )) {
          $index = $_POST['index'];
        
          // Get the filters
