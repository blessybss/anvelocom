						$eshop_product['sku']=htmlspecialchars($last_post_id);
						$eshop_product['description']=htmlspecialchars($DenumireProdusClar);
						$eshop_product['sale']='yes';
						$eshop_product['featured']='Yes';
						$final_stock=(($Stoc-$_POST['anvelocom-import-stock-reduce'])>0)?($Stoc-$_POST['anvelocom-import-stock-reduce']):0;
						$eshop_product['products'][1]['stkqty']=$final_stock;
						$stocktable=$wpdb->prefix ."eshop_stock";
						$sql = "select post_id from $stocktable WHERE post_id=$last_post_id AND option_id=1";
